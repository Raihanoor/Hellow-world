#include <bits/stdc++.h>

using namespace std;


int main() {
    int t, p = 0;
    cin >> t;
    while (t--) {
        int a, b, c;
        cin >> a >> b >> c;
        if (a > b && b > c) printf("Case %d: %d\n", ++p, b);
        else if (a < b && b < c) printf("Case %d: %d\n", ++p, b);

        else if (b < a && a < c) printf("Case %d: %d\n", ++p, a);
        else if (b > a && a > c) printf("Case %d: %d\n", ++p, a);
        else if (a < c && c < b)printf("Case %d: %d\n", ++p, c);

        else if (a > c && c > b)printf("Case %d: %d\n", ++p, c);

    }

    return 0;
}
