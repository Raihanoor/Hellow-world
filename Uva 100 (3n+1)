#include <bits/stdc++.h>

using namespace std;

int main() {
    int i, j, c, s;
    while (scanf("%d %d", &i, &j) != EOF) {


        printf("%d %d", i, j);
        if (i > j)swap(i, j);
        c = 0;
        s = 0;
        while (i <= j) {
            c = 1;
            int n = i;
            while (n != 1) {
                if (n % 2 == 1)n = 3 * n + 1;
                else n = n / 2;
                c++;
            }
            if (c > s) s = c;

            i++;

        }
        printf(" %d\n", s);
    }
    return 0;
}
